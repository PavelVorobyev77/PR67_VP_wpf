<Window x:Class="PR67_VP.NewPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR67_VP"
        mc:Ignorable="d"
        Title="NewPasswordWindow" Height="369" Width="432">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="164.94"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Напишите новый пароль:" Margin="93,38,97,108"/>
        <PasswordBox x:Name="txtNewPassword" Margin="93,63,97,77"/>

        <TextBlock Text="Подтвердите пароль:" Margin="93,99,109,47"/>
        <PasswordBox x:Name="txtConfirmPassword" Margin="93,129,97,10"/>
        <Button Content="Сохранить" Click="SaveNewPassword_Click" Margin="157,177,136,-52"/>
    </Grid>
</Window>
