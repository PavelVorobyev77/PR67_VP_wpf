<Window x:Class="PR67_VP.PasswordRecoveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR67_VP"
        mc:Ignorable="d"
        Title="PasswordRecoveryWindow" Height="450" Width="288">
    <Grid>
        <StackPanel Margin="1,20,1,0">
            <TextBlock Text="Введите вашу почту:" Width="224"/>
            <TextBox x:Name="txtUsernameOrEmail" Margin="0 5" Height="22" Width="250"/>
            <Button Content="Отправить код подтверждения" Click="SendConfirmationCode_Click" Margin="0 10" Width="250"/>
            <TextBlock Text="Введите код подтверждения:" Margin="0 10" Width="243"/>
            <TextBox x:Name="txtConfirmationCode" Margin="0 5" Height="22" Width="250"/>
            <Button Content="Подтвердить" Click="Confirm_Click" Margin="0 10" Width="250"/>
        </StackPanel>
    </Grid>
</Window>
